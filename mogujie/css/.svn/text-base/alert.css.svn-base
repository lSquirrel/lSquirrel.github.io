/*修改默认alert弹出框的样式*/
.vp_wrap{
	display: block;
	position: fixed;
	left: 50%;
	top: 50%;
	background: #fff;
	z-index: 100;
	width: auto;
	min-width: 400px;
	max-width: 640px;
	border-radius: 1px;
	box-shadow: 0 0 3px rgba(0,0,0,0.1);
}
.vp_t{
	color: #666;
	height: 45px;
	padding: 0 20px;
	font-size: 16px;
	line-height: 45px;
	background: #F2F2F2;
}
.vp_cls{
	position: absolute;
	display: block;
	top: 13px;
	right: 13px;
	width: 20px;
	height: 19px;
	background: url(../img/accountSet/alertClose_20x19.png) 0 0 no-repeat;
}
.v_pop_box{
	text-align: center;
}
.vp_alert{
	padding: 40px;
}
.vp_cnt{
	text-align: center;
	padding: 0 0 40px;
	font-size: 14px;
	line-height: 1.5;
}
.vp_btn{
	color: #fff;
	border: 1px solid #f46;
	background-color: #f46;
	display: inline-block;
	padding: 0 30px;
	margin: 0 5px;
	height: 26px;
	line-height: 26px;
	border-radius: 2px;
	font-size: 14px;
	outline: none;
}